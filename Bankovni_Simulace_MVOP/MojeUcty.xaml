<Window x:Class="Bankovni_Simulace_MVOP.MojeUcty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bankovni_Simulace_MVOP"
        mc:Ignorable="d"
        Title="MojeUcty" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="20" Grid.Column="0" Text="Spořící účty" HorizontalAlignment="Center" FontWeight="Bold" TextDecorations="Underline"/>
        <TextBlock FontSize="20" Grid.Column="1" Text="Úvěrové účty" HorizontalAlignment="Center" FontWeight="Bold" TextDecorations="Underline"/>
        <TextBlock FontSize="20" Grid.Column="2" Text="Spořící studentské účty" HorizontalAlignment="Center" FontWeight="Bold" TextDecorations="Underline"/>
        <Label x:Name="sporici" Content="" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
        <Button Height="40" Width="40" Click="Button_Click" Grid.Column="1" Grid.Row="2" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
